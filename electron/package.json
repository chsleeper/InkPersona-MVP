{
  "name": "inkpersona-electron",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.inkpersona.editor",
    "productName": "InkPersona",
    "files": [
      "../frontend/dist/**",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "InkPersona",
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": ["sha256"],
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "InkPersona"
    },
    "publish": null
  }
}